---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'SMS Legal - Infraestructura SMS con diligencia RGPD/LSSI',
  description = 'Servicio técnico de envío SMS para negocios locales con verificación automática Lista Robinson y trazabilidad RGPD. Sin asesoría, solo infraestructura.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow" />
  
  <title>{title}</title>
  
  <!-- Preconnect para fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin="anonymous" />
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400&family=IBM+Plex+Sans:wght@400;500;600&family=IBM+Plex+Serif:wght@600&display=swap" rel="stylesheet" />
  
  <!-- Canonical -->
  <link rel="canonical" href="https://smslegal.es" />
  
  <style is:global>
    /* Reset & Base Styles */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    html {
      scroll-behavior: smooth;
    }
    body {
      font-family: 'IBM Plex Sans', sans-serif;
      font-size: 16px;
      line-height: 1.7;
      color: #1a1a1a;
      background-color: #f0f0f0;
      -webkit-font-smoothing: antialiased;
    }
    h1, h2, h3, h4 {
      font-family: 'IBM Plex Serif', serif;
      font-weight: 600;
      color: #1a1a1a;
    }
    /* Typography specific to spec */
    h1 { font-size: 3rem; line-height: 1.2; }
    h2 { font-size: 2rem; line-height: 1.3; }
    h3 { font-size: 1.5rem; line-height: 1.3; }
    
    /* Responsive */
    @media (max-width: 768px) {
      h1 { font-size: 2.25rem; }
      h2 { font-size: 1.75rem; }
      h3 { font-size: 1.25rem; }
    }
  </style>
</head>
<body>
  <slot />
</body>
</html>