---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'SMS Legal - Infraestructura SMS con diligencia RGPD/LSSI',
  description = 'Servicio técnico de envío SMS para negocios locales con verificación automática Lista Robinson y trazabilidad RGPD. Sin asesoría, solo infraestructura.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta name="description" content={description} />
  <meta name="robots" content="index, follow" />
  
  <title>{title}</title>
  
  <!-- Preconnect para fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossOrigin="anonymous" />
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Mono:wght@400&family=IBM+Plex+Sans:wght@400;500;600&family=IBM+Plex+Serif:wght@600&display=swap" rel="stylesheet" />
  
  <!-- Canonical -->
  <link rel="canonical" href="https://smslegal.es" />
</head>
<body>
  <slot />
</body>
</html>
